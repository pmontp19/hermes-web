---
import Icon from './Icon.astro';
import { getLocaleFromURL, type Locale } from '../utils/i18n';
import { translations } from '../utils/translations';

// Get current locale from URL
const currentLocale = getLocaleFromURL(Astro.url.pathname) as Locale;

// Get translations from the centralized file
const t = translations[currentLocale];

// Get the specific feature items translations for the current locale
const featureItems = [
  {
    icon: 'globe-2',
    title: t.components.features.items.nativeTranslators.title,
    description: t.components.features.items.nativeTranslators.description
  },
  {
    icon: 'check-circle',
    title: t.components.features.items.qualityAssurance.title,
    description: t.components.features.items.qualityAssurance.description
  },
  {
    icon: 'zap',
    title: t.components.features.items.fastTurnaround.title,
    description: t.components.features.items.fastTurnaround.description
  },
  {
    icon: 'laptop',
    title: t.components.features.items.technologyIntegration.title,
    description: t.components.features.items.technologyIntegration.description
  },
  {
    icon: 'shield',
    title: t.components.features.items.privacy.title,
    description: t.components.features.items.privacy.description
  },
  {
    icon: 'clock',
    title: t.components.features.items.availability.title,
    description: t.components.features.items.availability.description
  }
];
---

<section id="features" class="py-20 bg-toast-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <span class="text-toast-600 font-semibold">Why Choose Us</span>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mt-2 mb-4">
        {t.components.features.title}
      </h2>
      <p class="max-w-2xl mx-auto text-lg text-gray-600">
        {t.components.features.subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featureItems.map(feature => (
        <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition-shadow">
          <div class="bg-toast-100 rounded-full w-14 h-14 flex items-center justify-center mb-6">
            <Icon name={feature.icon} class="h-7 w-7 text-toast-600" />
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-3">{feature.title}</h3>
          <p class="text-gray-600">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
