---
import Button from './Button.astro';
import Icon from './Icon.astro';
import LanguageSwitcher from './LanguageSwitcher.astro';

const currentYear = new Date().getFullYear();
---

<footer class="bg-toast-700 text-white">
  <div class="container mx-auto px-4 py-12">
    <div class="grid md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1">
        <a href="/" class="text-2xl font-bold mb-4 inline-block">Context</a>
        <p class="text-toast-100 mb-4">Breaking language barriers and connecting worlds with professional translation services.</p>
        <div class="flex space-x-4">
          <Button href="#" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">
            <Icon name="linkedin" class="h-5 w-5" />
          </Button>
          <Button href="#" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">
            <Icon name="twitter" class="h-5 w-5" />
          </Button>
          <Button href="#" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">
            <Icon name="facebook" class="h-5 w-5" />
          </Button>
          <Button href="#" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">
            <Icon name="instagram" class="h-5 w-5" />
          </Button>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><Button href="#features" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">Features</Button></li>
          <li><Button href="#services" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">Services</Button></li>
          <li><Button href="#pricing" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">Pricing</Button></li>
          <li><Button href="#contact" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">Contact Us</Button></li>
        </ul>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Our Services</h3>
        <ul class="space-y-2">
          <li><Button href="#" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">Document Translation</Button></li>
          <li><Button href="#" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">Website Localization</Button></li>
          <li><Button href="#" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">Software Localization</Button></li>
          <li><Button href="#" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">Marketing Translation</Button></li>
          <li><Button href="#" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">Audio/Video Translation</Button></li>
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Contact Info</h3>
        <ul class="space-y-3">
          <li class="flex items-start">
            <Icon name="map-pin" class="h-5 w-5 text-toast-100 mr-2 mt-0.5" />
            <span class="text-toast-100">123 Translation Way<br>New York, NY 10001</span>
          </li>
          <li class="flex items-start">
            <Icon name="phone" class="h-5 w-5 text-toast-100 mr-2 mt-0.5" />
            <span class="text-toast-100">+1 (555) 123-4567</span>
          </li>
          <li class="flex items-start">
            <Icon name="mail" class="h-5 w-5 text-toast-100 mr-2 mt-0.5" />
            <span class="text-toast-100">info@context.com</span>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Divider -->
    <div class="border-t border-toast-400 my-8"></div>
    
    <!-- Copyright, Legal & Language Switcher -->
    <div class="flex flex-col md:flex-row justify-between items-center">
      <p class="text-toast-100 mb-4 md:mb-0">&copy; {currentYear} Context. All rights reserved.</p>
      <div class="flex flex-col sm:flex-row items-center gap-4">
        <div class="flex space-x-6">
          <Button href="/legal/privacy-cookie-policy" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">Privacy Policy</Button>
          <Button href="/legal/legal-mentions" variant="linkSecondary" class="text-toast-100 hover:text-white !p-0">Legal Mentions</Button>
        </div>
        <LanguageSwitcher class="mt-4 sm:mt-0 sm:ml-6" />
      </div>
    </div>
  </div>
</footer>