<header class="bg-white shadow-sm fixed w-full top-0 z-50">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="text-2xl font-bold text-toast-600">TranslateHub</a>
    
    <!-- Mobile menu button -->
    <button id="mobile-menu-button" class="md:hidden text-gray-500 hover:text-toast-700 focus:outline-none">
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
    
    <!-- Desktop Navigation -->
    <nav class="hidden md:flex space-x-8">
      <a href="#features" class="text-gray-600 hover:text-toast-600">Features</a>
      <a href="#services" class="text-gray-600 hover:text-toast-600">Services</a>
      <a href="#pricing" class="text-gray-600 hover:text-toast-600">Pricing</a>
      <a href="/blog" class="text-gray-600 hover:text-toast-600">Blog</a>
      <a href="#contact" class="text-gray-600 hover:text-toast-600">Contact</a>
    </nav>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t">
    <nav class="container mx-auto px-4 py-3 flex flex-col space-y-3">
      <a href="#features" class="text-gray-600 hover:text-toast-600 py-2">Features</a>
      <a href="#services" class="text-gray-600 hover:text-toast-600 py-2">Services</a>
      <a href="#pricing" class="text-gray-600 hover:text-toast-600 py-2">Pricing</a>
      <a href="/blog" class="text-gray-600 hover:text-toast-600 py-2">Blog</a>
      <a href="#contact" class="text-gray-600 hover:text-toast-600 py-2">Contact</a>
    </nav>
  </div>
</header>

<script client:load>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>

<!-- Add spacing to account for fixed header -->
<div class="h-16"></div>