<section class="relative pt-20 pb-32 bg-gradient-to-br from-toast-600 to-toast-800 text-white overflow-hidden">
  <!-- Background pattern (can be an SVG or other design) -->
  <div class="absolute inset-0 z-0 opacity-10">
    <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="smallGrid" width="20" height="20" patternUnits="userSpaceOnUse">
          <path d="M 20 0 L 0 0 0 20" fill="none" stroke="white" stroke-width="0.5"/>
        </pattern>
        <pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse">
          <rect width="100" height="100" fill="url(#smallGrid)"/>
          <path d="M 100 0 L 0 0 0 100" fill="none" stroke="white" stroke-width="1"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
        Professional Translation Services for Global Business
      </h1>
      
      <p class="text-xl md:text-2xl text-toast-50 mb-10">
        Connect with your international audience through precise, culturally nuanced translations in over 100 languages.
      </p>
      
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a
          href="#services"
          class="bg-white text-toast-700 hover:bg-toast-50 font-medium px-8 py-4 rounded-lg transition-all transform hover:-translate-y-0.5"
        >
          Explore Services
        </a>
        
        <a
          href="#contact"
          class="bg-toast-700 text-white border border-toast-500 hover:bg-toast-600 font-medium px-8 py-4 rounded-lg transition-all transform hover:-translate-y-0.5"
        >
          Get a Quote
        </a>
      </div>
    </div>
    
    <!-- Trust indicators -->
    <div class="mt-16">
      <p class="text-center text-toast-100 text-sm mb-6">TRUSTED BY LEADING COMPANIES WORLDWIDE</p>
      
      <div class="flex flex-wrap justify-center items-center gap-8 opacity-80">
        <!-- Replace with actual logos or just use text -->
        <div class="text-white font-semibold">Microsoft</div>
        <div class="text-white font-semibold">Amazon</div>
        <div class="text-white font-semibold">Tesla</div>
        <div class="text-white font-semibold">Netflix</div>
        <div class="text-white font-semibold">Salesforce</div>
      </div>
    </div>
  </div>
</section>