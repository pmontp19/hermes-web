---
import Button from "@/components/ui/Button.astro";
import { getLocaleFromURL, type Locale } from "../utils/i18n";
import { translations } from "../utils/translations";
import Quote from "./Quote.astro";

// Get the current locale from URL
const currentLocale = getLocaleFromURL(Astro.url.pathname) as Locale;

// Get translations from the centralized file
const t = translations[currentLocale];
---

<section class="relative pt-16 pb-20 md:pt-20 md:pb-28 overflow-hidden">
  <div
    class="absolute -top-24 -right-24 w-96 h-96 bg-context-lightBlue opacity-20 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute -bottom-24 -left-24 w-72 h-72 bg-context-accent opacity-20 rounded-full blur-3xl"
  >
  </div>

  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center gap-12">
      <div class="flex-1 max-w-2xl">
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight"
        >
          Breaking langauge barriers with <span class="highlight-underline"
            >context</span
          >
        </h1>
        <p class="text-lg md:text-xl text-gray-700 mb-8">
          Professional translation services that preserve the nuance and
          cultural context of your message, delivered by expert linguists in
          over 100 languages.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <Button size="lg">Hello</Button>
          <Button variant="outline" size="lg">Explore Services</Button>
        </div>

        <div class="mt-12 flex items-center gap-8">
          <div class="flex flex-col items-center">
            <span class="font-bold text-context-blue text-2xl md:text-3xl">100+</span>
            <span class="text-sm text-gray-600">Languages</span>
          </div>
          <div class="w-px h-12 bg-gray-200"></div>
          <div class="flex flex-col items-center">
            <span class="font-bold text-context-blue text-2xl md:text-3xl">5,000+</span>
            <span class="text-sm text-gray-600">Projects</span>
          </div>
          <div class="w-px h-12 bg-gray-200"></div>
          <div class="flex flex-col items-center">
            <span class="font-bold text-context-blue text-2xl md:text-3xl">99%</span>
            <span class="text-sm text-gray-600">Satisfaction</span>
          </div>
        </div>
      </div>
      
      <Quote />

    </div>
  </div>
</section>

<section
  class="relative pt-20 pb-32 bg-gradient-to-br from-toast-600 to-toast-800 text-white overflow-hidden"
>
  <!-- Animated grid background -->
  <div class="absolute inset-0 z-0">
    <div class="grid-animation"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
        {t.pages.home.heroTitle}
      </h1>

      <p class="text-xl md:text-2xl text-toast-50 mb-10">
        {t.pages.home.heroSubtitle}
      </p>

      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <Button href="#services" variant="secondary" size="lg">
          {t.pages.home.exploreServices}
        </Button>

        <Button
          href="#contact"
          variant="primary"
          size="lg"
          class="bg-toast-50 hover:bg-toast-700 border border-toast-500"
        >
          {t.pages.home.getInTouch}
        </Button>
      </div>
    </div>

    <!-- Trust indicators -->
    <div class="mt-16">
      <p class="text-center text-toast-100 text-sm mb-6">
        TRUSTED BY LEADING COMPANIES WORLDWIDE
      </p>

      <div class="flex flex-wrap justify-center items-center gap-8 opacity-80">
        <!-- Replace with actual logos or just use text -->
        <div class="text-white font-semibold">Microsoft</div>
        <div class="text-white font-semibold">Amazon</div>
        <div class="text-white font-semibold">Tesla</div>
        <div class="text-white font-semibold">Netflix</div>
        <div class="text-white font-semibold">Salesforce</div>
      </div>
    </div>
  </div>
</section>

<style>
  .grid-animation {
    width: 200%;
    height: 200%;
    background-image: linear-gradient(
        to right,
        rgba(255, 255, 255, 0.1) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 30px 30px;
    transform-origin: 0 0;
    animation: grid-move 20s linear infinite;
    opacity: 0.2;
  }

  @keyframes grid-move {
    0% {
      transform: translate(-25%, -25%) rotate(0deg) scale(1);
    }
    50% {
      transform: translate(-25%, -25%) rotate(5deg) scale(1.1);
    }
    100% {
      transform: translate(-25%, -25%) rotate(0deg) scale(1);
    }
  }

  /* Additional grid layer for depth effect */
  .grid-animation::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: linear-gradient(
        to right,
        rgba(255, 255, 255, 0.07) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.07) 1px, transparent 1px);
    background-size: 100px 100px;
    animation: grid-pulse 4s ease-in-out infinite alternate;
  }

  @keyframes grid-pulse {
    0% {
      opacity: 0.3;
    }
    100% {
      opacity: 0.6;
    }
  }
</style>
