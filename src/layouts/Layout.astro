---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = "TranslateHub - Professional Translation Services" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="Professional translation services for businesses and individuals. Quality, speed, and privacy guaranteed." />
	</head>
	<body class="font-sans">
		<slot />
	</body>
</html>

<style is:global>
  :root {
    --color-primary: #4361ee;
    --color-secondary: #3f37c9;
    --color-accent: #f72585;
  }
  
  html {
    scroll-behavior: smooth;
  }
</style>
